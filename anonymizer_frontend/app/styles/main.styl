accent = #F95A5A
shadow = #aaa

body
  background #91A2C0
  font normal 18px "Helvetica Neue", Arial, Helvetica, sans-serif

ul
  list-style-type none

a, a:visited
  color accent
  text-decoration none

a:hover
  color #665248

::selection
  background accent
  color white

#home-view
  text-align center

  #content
    background #FFF
    padding 20px
    -webkit-border-radius 4px
    -moz-border-radius 4px
    border-radius 4px


/* Default font settings */
body
  font-size 15px
  color #666
  background #fff
  font-family "KievitPro", "ff-kievit-web-pro-1","ff-kievit-web-pro-2", "Helvetica Neue", Arial, Helvetica, sans-serif

/* Headings */
h1,h2,h3,h3,h4
  font-weight normal
  clear left

h1
  font-weight normal
  font-size 36px
  font-family Helvetica, Arial, sans-serif
  line-height 1.4
  margin-bottom 0.5em

h2
  font-size 2em
  line-height 1
  margin-bottom 0.5em

/* Text elements */
p
  margin 0 0 1.5em

a:focus, a:hover
  color accent
  text-decoration underline
a
  color accent
  text-decoration none

/* Lists */
ul, ol
  margin 0
  padding 0
  list-style-type none
li
  margin 0
  padding 5px


#string
  font-weight normal
  font-size 36px
  font-family Helvetica, Arial, sans-serif
  line-height 50px

  margin-top 100px
  padding 0 5px

  .chunk.anonymize
    color accent
    border-left 1px dotted accent
    border-right 1px dotted accent
    cursor pointer

#filter
  font-weight normal
  font-size 18px
  font-family Monaco, Courier, monospace
  
  margin-top 40px

  #replace input
    width 4em

#controls
  font-size 14px
  font-family Helvetica, Arial, sans-serif
  font-weight bold
  
  margin-top 40px
  a
    padding 8px 15px
    margin 10px
    border-radius 8px
    &:hover
      text-decoration none
      box-shadow 0px 0px 10px shadow

  #save
    background accent
    color white
  #reset, #next, #add
    border 4px solid accent
    padding 4px 11px
  #add
    position fixed
    right 20px
    top 50px

#test
  font-weight normal
  font-size 14px
  font-family Helvetica, Arial, sans-serif

  width 90%
  margin-left auto
  margin-right auto
  margin-top 80px

  table
    margin-left auto
    margin-right auto

  td
    padding-bottom 10px

  .raw, .search
    text-align right
    width 47%
  .divider
    width 20px
  .redacted, .replace
    text-align left
    width 47%

#chunk_edit_view
  background rgba(255,255,255,.75)
  z-index 1000
  position absolute
  left 0
  top 0
  right 0
  bottom 0    

  #container
    margin-top 50px
    background white
    border 5px solid accent
    border-radius 20px
    box-shadow 0px 0px 20px shadow
    width 400px
    height auto
    margin-left auto
    margin-right auto
