body
  background #91A2C0
  font normal 18px "Helvetica Neue", Arial, Helvetica, sans-serif

ul
  list-style-type none

a, a:visited
  color #F95A5A
  text-decoration none

a:hover
  color #665248

#home-view
  text-align center

  #content
    background #FFF
    padding 20px
    -webkit-border-radius 4px
    -moz-border-radius 4px
    border-radius 4px



/* Default font settings */
body
  font-size 15px
  color #666
  background #fff
  font-family "KievitPro", "ff-kievit-web-pro-1","ff-kievit-web-pro-2", "Helvetica Neue", Arial, Helvetica, sans-serif

/* Headings */
h1,h2,h3,h3,h4
  font-weight normal
  color #222
  clear left

h1
  font-size 5em
  line-height 1.4
  margin-bottom 0.5em
h2
  font-size 2em
  line-height 1
  margin-bottom 0.5em

/* Text elements */
p
  margin 0 0 1.5em

a:focus, a:hover
  color #F95A5A
  text-decoration underline
a
  color #F95A5A
  text-decoration none

/* Lists */
ul, ol
  margin 0
  padding 0
  list-style-type none
li
  margin 0
  padding 5px


/* Style */
#content
  width 605px
  margin 0 auto
  margin-top 40px
  margin-bottom 60px

h1
  background #91A2C0
  background-image url('http://brunch.io/images/brunch.png')
  background-repeat no-repeat
  background-position 2px
  color #fff
  width 330px
  padding-left 138px
  -webkit-border-radius 5px
  -moz-border-radius 5px
  border-radius 5px

#props
  position relative
  top 36px
  font-size 18px
  padding-left 373px
  color #eee
  font-style italic

#string
  font-weight normal
  font-size 36px
  font-family Helvetica, Arial, sans-serif
  line-height 50px

  margin-top 100px
  padding 0 5px

  .chunk
    cursor pointer
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    -o-user-select: none;
    user-select: none;

  .chunk:hover
    border-top: 1px solid #ddd
    border-bottom: 1px solid #ddd

  .chunk.anonymize
    color #F95A5A

#filter
  font-weight normal
  font-size 18px
  font-family Monaco, Courier, monospace
  
  margin-top 40px
  div
    display inline

#controls
  font-size 14px
  font-family Helvetica, Arial, sans-serif
  font-weight bold
  
  margin-top 40px
  a
    padding 8px 15px
    margin 10px
    border-radius 8px
    &:hover
      text-decoration none
      box-shadow 0px 0px 10px #aaa

  #save
    background #F95A5A
    color white
  #reset
    border 4px solid #F95A5A
    padding 4px 11px
  #next
    position absolute
    right 20px
    top 50px
    border 4px solid #F95A5A
    padding 4px 11px

#text
  font-weight normal
  font-size 14px
  font-family Helvetica, Arial, sans-serif

  margin-top 80px

  #original
    width 50%
    float left
    text-align right
  #filtered
    width 50%
    float right
    text-align left
