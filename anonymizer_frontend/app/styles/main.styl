accent = #F95A5A
shadow = #aaa
light = #bbb
extra_light = #eee
background_color = #FFF
normal_font = "Helvetica Neue", Arial, Helvetica, sans-serif
console_font = Inconsolata, Monaco, Courier, monospace

body
  background background_color
  font normal 18px normal_font

ul
  list-style-type none

a, a:visited
  color accent
  text-decoration none

a:hover
  color #665248

hr
  height 1px

::selection
  background accent
  color white

.console
  font-family console_font
 
#home-view
  text-align center

  #content
    background #FFF
    padding 20px
    -webkit-border-radius 4px
    -moz-border-radius 4px
    border-radius 4px


/* Default font settings */
body
  font-size 15px
  color #666
  background #fff
  font-family "KievitPro", "ff-kievit-web-pro-1","ff-kievit-web-pro-2", "Helvetica Neue", Arial, Helvetica, sans-serif

/* Headings */
h1,h2,h3,h3,h4
  font-weight normal
  clear left

h1
  font-weight normal
  font-size 36px
  font-family Helvetica, Arial, sans-serif
  line-height 1.4
  margin-bottom 0.5em

h2
  font-size 2em
  line-height 1
  margin-bottom 0.5em

/* Text elements */
p
  margin 0 0 1.5em

a:focus, a:hover
  color accent
  text-decoration underline
a
  color accent
  text-decoration none

/* Lists */
ul, ol
  margin 0
  padding 0
  list-style-type none
li
  margin 0
  padding 5px


#string
  font-weight normal
  font-size 36px
  font-family Helvetica, Arial, sans-serif
  line-height 50px

  margin-top 100px
  padding 0 5px

  .chunk.anonymize
    color accent
    border-left 1px dotted accent
    border-right 1px dotted accent
    cursor pointer

  span:hover
    background extra_light
  span.anonymize:hover
    background background_color

#filter
  .console
    vertical-align middle
    background extra_light
    font-weight normal
    font-size 18px
    font-family console_font
  
  margin-top 40px
  div
    margin-top 20px

  .label
    vertical-align middle
    font-size 12px
    font-family normal_font
    color light
    margin-right 10px

  #replace input
    width 4em

.controls
  font-size 14px
  font-family Helvetica, Arial, sans-serif
  font-weight bold

  a, span
    color accent
    cursor pointer
    padding 8px 15px
    margin 10px
    border-radius 8px
    border 4px solid accent
    padding 4px 11px

    &:hover
      text-decoration none
      box-shadow 0px 0px 10px shadow

  a.bold, span.bold
    padding 8px 15px
    background accent
    color white
    border none

#controls
  margin-top 40px

#stats
  margin-top 20px
  display block
  font-weight normal
  color light
  font-size 12px

#test
  font-weight normal
  font-size 14px
  font-family Helvetica, Arial, sans-serif
  vertical-align middle
  line-height 20px

  width 90%
  margin-left auto
  margin-right auto
  margin-top 80px

  table
    margin-left auto
    margin-right auto

  td
    padding-bottom 10px

  .count
    color light
    font-size 12px
  .raw, .search
    text-align right
    width 47%
  .divider
    width 20px
  .redacted, .replace
    text-align left
    width 47%

#chunk_edit_view
  position absolute
  left 0
  top 0
  right 0
  bottom 0

  #screen
    background rgba(255,255,255,.75)
    position absolute
    left 0
    top 0
    right 0
    bottom 0    
    z-index 1000

  .indent
    margin-left 30px

  #container
    padding 10px 40px
    margin-top 50px
    background background_color
    border 5px solid accent
    border-radius 20px
    box-shadow 0px 0px 20px shadow
    width 400px
    height auto
    margin-left auto
    margin-right auto
    position relative
    z-index 2000

    label
      margin-right 2em

    .example
      color light

  .controls, .options
    text-align center

  .controls
    margin 40px 0

#new-view
  text-align center
  margin-top 50px
  img
    margin-top 50px
